{% extends 'layouts/app.html.twig' %}

{% block main %}
    <div class="card mb-4">
        {% if post.image %}
            <img src="/storage/images/{{ post.image }}" class="card-img-top" alt="{{ post.title }}">
        {% endif %}

        <div class="card-body">
            <h1 class="card-title">{{ post.title }}</h1>
            <p class="card-text">{{ post.description }}</p>
            <p class="text-muted">
                Posted on {{ post.created_at|date('F j, Y') }}
            </p>
            <a href="/posts" class="btn btn-secondary">‚Üê Back to Posts</a>
        </div>
    </div>
    
{% endblock %}
